package N04_복습;

public class Test01 {

	public static void main(String[] args) {
		// 1 + (1+2) + (1+2+3) + (1+ ... +10)의 결과를 계산하시오
		int sum=0;
		for(int i=1; i<=10; i++)
			for(int j=1; j<=i; j++)
				sum += j;
		System.out.println("결과 : " + sum);
		
		// (sig n + sig n^2) / 2 니까... n(n+1)/2 + n(n+1)(2n+1)/6 이었던가..ㅋㅋ
		int n = 10;
		System.out.println("결과 : " + (n*(n+1)/2 + n*(n+1)*(2*n+1)/6)/2);

	}

}
